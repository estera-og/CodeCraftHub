# Environment configuration for User Management Service

# Node environment. Use production in deployed environments.
NODE_ENV=development

# Port for the HTTP server
PORT=3000

# Mongo connection string
# Example:
# MONGO_URI=mongodb://root:password@host:27017/userdb?authSource=admin
MONGO_URI=

# JWT secrets. Use strong random values in production.
JWT_ACCESS_SECRET=replace_me_access_secret
JWT_REFRESH_SECRET=replace_me_refresh_secret

# Token time to live. Formats like 15m, 7d.
ACCESS_TOKEN_TTL=15m
REFRESH_TOKEN_TTL=7d

# Allowed CORS origins. Comma separated list.
# Example: http://localhost:5173,https://your-frontend.example.com
CORS_ORIGINS=

# Log level. Typical values: debug, info, warn, error.
LOG_LEVEL=info
